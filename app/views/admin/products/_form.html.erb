<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <%= simple_form_for [:admin, @product] do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :code %>
      <%= f.input :price %>
      <%= f.input :location %>
      <%= f.association :category %>
      <div class="field">
        <%= f.input :picture %>
      </div>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>


  
